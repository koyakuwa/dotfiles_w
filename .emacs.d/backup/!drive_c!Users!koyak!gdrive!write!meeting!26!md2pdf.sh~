#!/bin/sh
#pandoc memo.md -o memo.tex
python replace.py memo.tex "。"  ". "
python replace.py memo.tex "、"  ", "
python replace.py memo.tex "boldsymbol{"  "vector{"
# python replace.py memo.tex "includegraphics"  "includegraphics[width=6.5cm]"
# python replace.py memo.tex "begin{figure}" "begin{figure}[ht]"
platex --kanji=utf8 \m26.tex
pbibtex --kanji=utf8 \m26.aux
platex --kanji=utf8 \m26.tex
mendex \m26.nlo -s nomencl.ist -o \m26.nls
platex --kanji=utf8 \m26.tex
dvipdfmx \m26.dvi
start \m26.pdf
