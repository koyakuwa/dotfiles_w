#!/bin/sh
pandoc memo.md -o memo.tex
python3 replace.py memo.tex "。"  ". "
python3 replace.py memo.tex "、"  ", "
python3 replace.py memo.tex "boldsymbol{"  "vector{"
python3 replace.py memo.tex "includegraphics"  "includegraphics[width=7cm]"
platex --kanji=utf8 \m20.tex
pbibtex --kanji=utf8 \m20.aux
platex --kanji=utf8 \m20.tex
mendex \m20.nlo -s nomencl.ist -o \m20.nls
platex --kanji=utf8 \m20.tex
dvipdfmx \m20.dvi
start \m20.pdf
